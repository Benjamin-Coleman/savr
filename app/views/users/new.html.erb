<h1>Sign Up for Savr</h1>
<%=form_for(@user, url: users_create_path) do |f|%><br>
<%=f.label "Name" %><br>
<%=f.text_field :name %><br>
<%=f.label "Password" %><br>
<%=f.password_field :password %><br>
<%=f.label "Confirm Password" %><br>
<%=f.password_field :password_confirmation %><br>
<%=f.submit "Sign Up" %>
<% end %>
