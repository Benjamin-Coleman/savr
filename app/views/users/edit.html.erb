<div class="container animated fadeIn col-6">
	<h1 class="basic-page-headline">Edit your account</h1>
	<%=form_for(@user, url: user_update_path(@user), method: :patch) do |f|%><br>
	<%=f.label "Bio" %><br>
	<%=f.text_area :bio, class: "form-control form-control-md" %><br>
	<%=f.submit "Submit Changes", class: "btn btn-primary btn-lg" %>
	<% end %>
</div>
